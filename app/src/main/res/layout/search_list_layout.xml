<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/song_list_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:padding="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="15dp"
            android:paddingBottom="10dp"
            android:id="@+id/favoriteHeaderHolder"
            android:visibility="gone">

            <TextView
                android:textSize="10sp"
                android:lineSpacingMultiplier="0.15"
                android:lineSpacingExtra="15sp"
                android:id="@+id/favoriteHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Favorites"
                android:layout_marginLeft="5dp"
                android:textStyle="normal" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="15dp"
            android:paddingBottom="10dp"
            android:id="@+id/addHeaderHolder"
            android:visibility="gone">

            <TextView
                android:textSize="10sp"
                android:lineSpacingMultiplier="0.15"
                android:lineSpacingExtra="15sp"
                android:id="@+id/addHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Contacts"
                android:layout_marginLeft="5dp"
                android:textStyle="normal" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_song_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Anna Wilson"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textSize="15sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tv_artist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="15sp"
                    android:lineSpacingMultiplier="1.15"
                    android:text="+7 954 65-65-55"
                    android:textSize="10sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <ImageView
                android:id="@+id/haschatsauce"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:padding="10dp"
                android:layout_marginRight="5dp"
                 />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        android:layout_marginLeft="70dp"
        >
    </View>
</LinearLayout>